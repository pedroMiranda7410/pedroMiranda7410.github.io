                     <h3 class="regTitle padB20">Envie-me um e-mail por esse formulário.</h3>

                <!--<img>pmiranda7410@gmail.com</img> -->
                <!-- FORM -->
                <%= form_for @contact do |f| %>
                <div class="form-group row">
                    <label for="nome" class="col-2 col-form-label">Nome</label>
                    <div class="col-10">
                    <%= f.text_field :name, required: true, :class => 'form-control' %>

                  </div>
                </div>

                <div class="form-group row">
                  <label for="email" class="col-2 col-form-label rp" > E-mail </label>
                    <div class="col-10">
                    <%= f.email_field :email, required: true, :class => 'form-control' %>

                  </div>
              </div>

              <div class="form-group row">
                  <label for="assunto" class="col-2 col-form-label">Assunto</label>
                    <div class="col-10">
                    <%= f.text_field :assunto, required: true, :class => 'form-control'%>

                  </div>
          </div>


                <div class="form-group">
                    <label for="assunto" class="col-2 col-form-label" style="margin: 0; padding-left: 0;">Mensagem</label>

                    <%= f.text_area :message, as: :text, :class => 'form-control', :style => 'padding-left: 0;'%>
                </div>

                    <div class="hidden">
                      <%= f.label :nickname %><br>
                      <%= f.text_field :nickname, hint: 'leave this field blank' %>
                    </div>

                    <div class="cenX down">
                    <%= f.submit 'Enviar', :class => 'btn', :class => 'btn-primary', :class => 'btn-lg', :style => 'color: white;', :style => 'background-color: #C0C6C8;' %>
                  </div>

                <% end %>



